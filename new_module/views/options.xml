<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="custom_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
                <div data-selector="section,[class^='col-md']">
                    <we-select string="Select type">
                        <we-button data-select-class="courses">Courses</we-button>
                        <we-button data-select-class="teachers">Custom</we-button>
                        <we-button data-select-class="students">Students</we-button>
                    </we-select>
                </div>
        </xpath>
    </template>

</odoo>