<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- === Services Page === -->
    <record id="courses_page" model="website.page">
        <field name="name">Courses page</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <t t-foreach="courses" t-as="course">
                            <div t-field="course.name"/>
                        </t>
                    </div>
                    <!-- === Snippets' area === -->
                    <div class="oe_structure"/>
                </div>
            </t>
        </field>
    </record>

    <record id="courses_page_link" model="website.menu">
        <field name="name">Courses</field>
<!--        <field name="url">/my/courses</field>-->
        <field name="page_id" ref="courses_page"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
    </record>

    <record id="teachers_page" model="website.page">
        <field name="name">Teachers page</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <h2>All Teachers:</h2>
                    </div>
                    <div class="container">
                        <t t-foreach="teachers" t-as="teacher">
                            <div>
                                <span t-field="teacher.name"/>
                                <span t-field="teacher.teacher_surname"/>
                            </div>
                        </t>
                    </div>
                    <!-- === Snippets' area === -->
                    <div class="oe_structure"/>
                </div>
            </t>
        </field>
    </record>

    <record id="teachers_page_link" model="website.menu">
        <field name="name">Teachers</field>
<!--        <field name="url">/my/teachers</field>-->
        <field name="page_id" ref="teachers_page"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">30</field>
    </record>

    <record id="students_page" model="website.page">
        <field name="name">Students page</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <h2>All Students:</h2>
                    </div>
                    <div class="container">
                        <t t-foreach="students" t-as="student">
                            <div>
                                <span t-field="student.name"/>
                                <span t-field="student.student_surname"/>
                            </div>
                        </t>
                    </div>
                    <!-- === Snippets' area === -->
                    <div class="oe_structure"/>
                </div>
            </t>
        </field>
    </record>

    <record id="students_page_link" model="website.menu">
        <field name="name">Students</field>
<!--        <field name="url">/my/students</field>-->
        <field name="page_id" ref="students_page"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">40</field>
    </record>

</odoo>